
//ki·ªÉm tra tr√¨nh duy·ªát c√≥ h·ªó tr·ª£ LocalStorage
function storageAvailable(type) {
    try {
        var storage = window[type],
            x = '__storage_test__';
        storage.setItem(x, x);
        storage.removeItem(x);
        return true;
    }
    catch(e) {
        return false;
    }
}

if (storageAvailable('localStorage')) {
	// Tuy·ªát v·ªùi, tr√¨nh duy·ªát n√†y h·ªó tr·ª£ LocalStorage
}
else {
	// üôÅ tr√¨nh duy·ªát kh√¥ng h·ªó tr·ª£ LocalStorage, t√¨m c√°ch kh√°c th√¥i.
}
